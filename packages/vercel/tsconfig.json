{
	"extends": "../tsconfig.settings.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"skipLibCheck": true,
		"target": "ES2022",
		"module": "es2022",
		"moduleResolution": "bundler",
		"declaration": true,
		"emitDeclarationOnly": true
	},
	"include": ["src"],
	"exclude": ["src/scripts"]
}
